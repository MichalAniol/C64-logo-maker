{
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    },
    "compilerOptions": {
        "target": "ES2020",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": false,
        "sourceMap": false,
        "downlevelIteration": false,
        "outFile": "prod/index.js",
        "module": "AMD",
        "moduleResolution": "node"
    },
    "files": [
        "src/console.ts",
        "src/storage.ts",
        "src/dom.ts",
        "src/program/config.ts",
        "src/program/core.ts",
        "src/program/2.divided/getData.ts",
        "src/program/3.differentColors/analysis.ts",
        "src/program/3.differentColors/reconstruction.ts",
        "src/program/_index.ts",
    ],
    "exclude": [
        "node_modules"
    ]
}